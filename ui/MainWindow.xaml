<Window
    x:Class="Logavise.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:local="clr-namespace:Logavise"
    Title="Logavise"
    Width="800"
    Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <avalon:TextEditor
            Name="textEditor"
            Grid.Column="0"
            FontFamily="Consolas"
            FontSize="12"
            ShowLineNumbers="True" />

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <DataGrid
                Name="FieldGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="True"
                ItemsSource="{Binding RegexFields}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Pattern}"
                        Header="RegEx Pattern" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding FieldName}"
                        Header="Field Name" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Value}"
                        Header="Value" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
